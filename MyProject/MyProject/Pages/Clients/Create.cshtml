@page
@model MyProject.Pages.Clients.CreateModel
@{
}


<br>
<h2>Новый посетитель</h2>

@if (Model.errorMessenge.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessenge</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
	</div>
}

<form method ="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">ФИО</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.clientsInfo.name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Паспортные данные</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="passportData" value="@Model.clientsInfo.passportData">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Эл. почта</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="email" value="@Model.clientsInfo.email">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Телефон</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="phone" value="@Model.clientsInfo.phone">
		</div>
	</div>
		<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Пол</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="gender" value="@Model.clientsInfo.gender">
		</div>
	</div>


	@if (Model.successMessenge.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-warning alert-dismissible fade show' role='alert'>
					<strong>@Model.successMessenge</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Добавить</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Отмена</a>
		</div>
	</div>
</form>